{
  "manifest_version": 3,

  "name": "Timer",
  "version": "1.1.0",
  "description": "A clean, simple countown timer with visual and audible alarm.",

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Timer",
    "default_popup": "fragments/popup.html"
  },

  "permissions": ["notifications", "alarms", "storage"],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/48.png",
        "assets/wine-glass-alarm.ogg",
        "assets/glyphicons-halflings.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
