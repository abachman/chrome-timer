{
	"name": "Timer"
  , "version": "0.1"
  , "manifest_version" : 2
  , "description": "A simple countown timer and alarm."
  , "background" : {
		"page" : "background.html"
	}
  , "browser_action" : {
		"default_icon": {
			"19": "icons/19.png",
			"38": "icons/38.png"
		},
		"default_title" : "Timer",
		"default_popup" : "fragments/popup.html"
	}
  , "permissions": [
    "notifications"
  ]
  // Note: Because of bug 134315, you must declare any images you
  // want to use with createNotification() as a web accessible resource.
  , "web_accessible_resources": [
    "icons/48.png"
  ]
  , "icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	}
}
